<%- include("header") -%>
    <div class="box" id="heading">
            <h1><%= kindOfDay %></h1>
    </div>

    <div class="box">
      
       <% Newitem.forEach(function(i){ %>
        <form action="/delete" method="POST">
        <div class="item"> 
            <input type="checkbox" name="checkbox" value="<%= i._id %>" onChange="this.form.submit()">       
            <p> <%= i.name %> </p>    
        </div>
        <input type="hidden" name="listName" value="<%= kindOfDay %>"></input>
        </form>
       <% }) %>

        <form class="item" action="/" method="POST">
            <input type="text" name="nitem" placeholder="new item" autocomplete="off">
            <button type="submit" name="list" value=<%= kindOfDay %> >+</button>
        </form>
    </div>
    <%- include("footer") -%>